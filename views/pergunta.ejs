<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %> 
    <div class="container">
        <hr>
        <br>
            <label>Título: <%= pergunta.titulo %></label>
            <p class="form-control">Descrição: <%= pergunta.descricao %></p>
        <hr>

        <form method="POST" action="/responder">
            <h4>Responda: </h4><br>
            <label>Resposta:</label>
            <textarea class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button class="btn btn-primary" type="submit">Enviar resposta</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

    
</body>

<%- include ('partials/footer.ejs') %>